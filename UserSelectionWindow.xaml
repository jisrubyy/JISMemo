<Window x:Class="JISMemo.UserSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="사용자 선택" Height="400" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize" MinHeight="300" MinWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="사용자 선택" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <ListBox Grid.Row="1" x:Name="UserListBox" Margin="0,0,0,10" 
                 SelectionMode="Single" MouseDoubleClick="UserListBox_MouseDoubleClick"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
            <Button x:Name="AddUserButton" Content="사용자 추가" Width="100" Height="30" 
                    Margin="0,0,10,0" Click="AddUserButton_Click"/>
            <Button x:Name="RemoveUserButton" Content="사용자 제거" Width="100" Height="30" 
                    Click="RemoveUserButton_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SelectButton" Content="선택" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="SelectButton_Click"/>
            <Button x:Name="CancelButton" Content="취소" Width="80" Height="30" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
