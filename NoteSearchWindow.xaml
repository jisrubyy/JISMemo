<Window x:Class="JISMemo.NoteSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="메모 검색" Height="500" Width="600" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5" ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="SearchBox" Grid.Row="0" Height="35" FontSize="14" Padding="8"
                 TextChanged="SearchBox_TextChanged"/>
        
        <TextBlock x:Name="ResultCount" Grid.Row="1" Margin="0,8,0,8" FontSize="12" Foreground="Gray"/>
        
        <ListBox x:Name="NotesListBox" Grid.Row="2" BorderThickness="1" BorderBrush="#CCC"
                 MouseDoubleClick="NotesListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="0,2" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Row="1" Text="{Binding Preview}" Margin="0,4,0,0" FontSize="12" Foreground="#666" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Row="2" Text="{Binding ModifiedText}" Margin="0,4,0,0" FontSize="10" Foreground="#999"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
