<Window x:Class="JISMemo.CreditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credit" Height="450" Width="650" MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="JISMemo" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" Text="Version 1.2" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:Name="DeveloperLabel" Text="개발자" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Jisrubyy" FontSize="14" Margin="20,0,0,20"/>

            <TextBlock x:Name="ContactLabel" Text="연락처" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="jisrubyy@gmail.com" FontSize="14" Margin="20,0,0,5"/>
            <TextBlock Text="zegtern@kakao.com" FontSize="14" Margin="20,0,0,20"/>
            
            <TextBlock x:Name="WebsiteLabel" Text="개발 및 배포" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Margin="20,0,0,20">
                <Hyperlink x:Name="WebsiteLink" NavigateUri="https://jisrubyywebpage.vercel.app/" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="https://jisrubyywebpage.vercel.app/"/>
                </Hyperlink>
            </TextBlock>
            
            <TextBlock x:Name="DonationLabel" Text="기부" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button x:Name="DonationButton" Background="#5DADE2" Foreground="White" BorderThickness="0" 
                    Cursor="Hand" HorizontalAlignment="Left" Margin="20,0,0,0" 
                    Width="220" Height="40" FontSize="14" FontWeight="Bold"
                    Click="DonationButton_Click">
                <TextBlock x:Name="DonationButtonText" Text="☕ Buy me a coffee" TextAlignment="Center"/>
            </Button>
        </StackPanel>
        
        <Button x:Name="CloseButton" Grid.Row="2" Content="확인" Width="100" Height="35" 
                HorizontalAlignment="Center" Click="CloseButton_Click" Margin="0,10,0,0"/>
        </Grid>
    </ScrollViewer>
</Window>
