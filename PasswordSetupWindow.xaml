<Window x:Class="JISMemo.PasswordSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="비밀번호 설정" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="비밀번호 설정" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" Text="비밀번호:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="2" x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="3" Text="비밀번호 확인:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" x:Name="ConfirmPasswordBox" Height="30" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="5" Text="힌트 (선택사항):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" x:Name="HintTextBox" Height="30" Margin="0,0,0,10" 
                 ToolTip="비밀번호를 잊었을 때 도움이 될 힌트를 입력하세요"/>
        
        <TextBlock Grid.Row="7" x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="확인" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="취소" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
