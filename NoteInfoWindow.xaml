<Window x:Class="JISMemo.NoteInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="메모 정보" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="메모 정보" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left"/>
            <Button Content="확인" Width="80" Height="30" HorizontalAlignment="Right" Click="OkButton_Click" IsDefault="True"/>
        </Grid>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="ID:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="1" x:Name="IdText" TextWrapping="Wrap" Margin="0,0,0,10" Foreground="Gray"/>
        
        <TextBlock Grid.Row="2" Text="생성 일시:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" x:Name="CreatedAtText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="4" Text="수정 일시:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="5" x:Name="ModifiedAtText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="6" Text="크기:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="7" x:Name="SizeText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="8" Text="위치:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="9" x:Name="PositionText" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="10" Text="소유자:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="11" x:Name="OwnerText" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="12" x:Name="DeviceInfoLabel" Text="기기 정보:" FontWeight="Bold" Margin="0,0,0,5" Visibility="Collapsed"/>
        <TextBlock Grid.Row="13" x:Name="DeviceInfoText" Margin="0,0,0,10" Visibility="Collapsed"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
