<Window x:Class="JISMemo.NoteInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="메모 정보" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="메모 정보" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" Text="ID:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" x:Name="IdText" TextWrapping="Wrap" Margin="0,0,0,10" Foreground="Gray"/>
        
        <TextBlock Grid.Row="3" Text="생성 일시:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" x:Name="CreatedAtText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="5" Text="수정 일시:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="6" x:Name="ModifiedAtText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="7" Text="크기:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="8" x:Name="SizeText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="9" Text="위치:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="10" x:Name="PositionText" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="11" Text="소유자:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="12" x:Name="OwnerText" Margin="0,0,0,10"/>
        
        <Button Grid.Row="13" Content="확인" Width="80" Height="30" HorizontalAlignment="Right" Click="OkButton_Click" IsDefault="True"/>
    </Grid>
</Window>
