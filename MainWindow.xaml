<Window x:Class="JISMemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JISMemo"
        mc:Ignorable="d"
        Title="JISMemo" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border x:Name="TitleBar" Grid.Row="0" Background="#333" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <Button x:Name="AddNoteButton" Content="+ 새 메모" Width="80" Height="30" Click="AddNoteButton_Click"/>
                <Button x:Name="SettingsButton" Content="설정" Width="50" Height="30" Margin="10,0,0,0" Click="SettingsButton_Click"/>
                <Button x:Name="HelpButton" Content="도움말" Width="60" Height="30" Margin="10,0,0,0" Click="HelpButton_Click"/>
                <Button x:Name="MinimizeButton" Content="최소화" Width="60" Height="30" Margin="10,0,0,0" Click="MinimizeButton_Click"/>
                <Button x:Name="ExitButton" Content="종료" Width="50" Height="30" Margin="10,0,0,0" Click="ExitButton_Click"/>
            </StackPanel>
        </Border>
        
        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollChanged="MainScrollViewer_ScrollChanged">
            <Canvas x:Name="NotesCanvas" Background="#01000000" Width="3000" Height="3000"/>
        </ScrollViewer>
        
        <Border Grid.Row="1" Width="200" Height="150" Background="#E0FFFFFF" BorderBrush="#333" BorderThickness="2" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" CornerRadius="4">
            <Canvas x:Name="MinimapCanvas" MouseLeftButtonDown="MinimapCanvas_MouseLeftButtonDown" MouseMove="MinimapCanvas_MouseMove" MouseLeftButtonUp="MinimapCanvas_MouseLeftButtonUp">
                <Rectangle x:Name="ViewportRect" Stroke="Red" StrokeThickness="2" Fill="#30FF0000"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
