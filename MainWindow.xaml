<Window x:Class="JISMemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JISMemo"
        mc:Ignorable="d"
        Title="JISMemo" Height="600" Width="1000" WindowStartupLocation="CenterScreen"
        Icon="/Resources/JISMemo_Icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border x:Name="TitleBar" Grid.Row="0" Background="#1E1E1E" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Margin="15,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="AddNoteButton" Content="➕ 새 메모" Height="32" Padding="12,6" Click="AddNoteButton_Click" Style="{StaticResource SuccessButton}"/>
                    <Button x:Name="SwitchUserButton" Content="👤 사용자 전환" Height="32" Padding="12,6" Margin="8,0,0,0" Click="SwitchUserButton_Click"/>
                    <Button x:Name="SettingsButton" Content="⚙️ 설정" Height="32" Padding="12,6" Margin="8,0,0,0" Click="SettingsButton_Click"/>
                    <Button x:Name="HelpButton" Content="❓ 도움말" Height="32" Padding="12,6" Margin="8,0,0,0" Click="HelpButton_Click"/>
                    <Button x:Name="CreditButton" Content="📜 제작자 정보" Height="32" Padding="12,6" Margin="8,0,0,0" Click="CreditButton_Click"/>
                    <Button x:Name="MinimizeButton" Content="— 최소화" Height="32" Padding="12,6" Margin="8,0,0,0" Click="MinimizeButton_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="ExitButton" Content="✖ 종료" Height="32" Padding="12,6" Margin="8,0,0,0" Click="ExitButton_Click" Style="{StaticResource DangerButton}"/>
                </StackPanel>
                <TextBlock x:Name="CurrentUserText" Text="" Foreground="#E0E0E0" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" FontSize="13" Margin="0,0,15,0" FontWeight="Medium"/>
            </Grid>
        </Border>
        
        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollChanged="MainScrollViewer_ScrollChanged">
            <Canvas x:Name="NotesCanvas" Width="3000" Height="3000"/>
        </ScrollViewer>
        
        <Border Grid.Row="1" Width="200" Height="150" Background="#E0FFFFFF" BorderBrush="#333" BorderThickness="2" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" CornerRadius="4">
            <Canvas x:Name="MinimapCanvas" MouseLeftButtonDown="MinimapCanvas_MouseLeftButtonDown" MouseMove="MinimapCanvas_MouseMove" MouseLeftButtonUp="MinimapCanvas_MouseLeftButtonUp">
                <Rectangle x:Name="ViewportRect" Stroke="Red" StrokeThickness="2" Fill="#30FF0000"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
