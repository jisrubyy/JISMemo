<Window x:Class="JISMemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JISMemo"
        mc:Ignorable="d"
        Title="JISMemo" Height="600" Width="800" Background="Transparent" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Canvas x:Name="NotesCanvas" Background="#01000000">
        <Border x:Name="TitleBar" Background="#333" Height="40" Canvas.Left="0" Canvas.Top="0" Width="800" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <Button x:Name="AddNoteButton" Content="+ 새 메모" Width="80" Height="30" Click="AddNoteButton_Click"/>
                <Button x:Name="MinimizeButton" Content="최소화" Width="60" Height="30" Margin="10,0,0,0" Click="MinimizeButton_Click"/>
                <Button x:Name="ExitButton" Content="종료" Width="50" Height="30" Margin="10,0,0,0" Click="ExitButton_Click"/>
            </StackPanel>
        </Border>
    </Canvas>
</Window>
